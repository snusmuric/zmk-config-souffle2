			key-positions = <LT4 LM4>;
			timeout-ms = <COMBO_TERM_FAST>;
			require-prior-idle-ms = <COMBO_PRIOR_IDLE_FAST>;
			layers = <BASE NUM SYM FUNCT>;
		};
		
		combo_undo {
			bindings = <&kp LG(Z)>;
			key-positions = <LM4 LB4>;
			timeout-ms = <COMBO_TERM_FAST>;
			require-prior-idle-ms = <COMBO_PRIOR_IDLE_FAST>;
		};

		combo_undo_right {
			bindings = <&kp LG(Z)>;
			key-positions = <RM4 RB4>;
			timeout-ms = <COMBO_TERM_FAST>;
			require-prior-idle-ms = <COMBO_PRIOR_IDLE_FAST>;
			layers = <BASE NUM SYM FUNCT MOUSE>;
		};
		
		combo_cut {
