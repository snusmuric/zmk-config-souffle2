#include "layers_definitions.dtsi"
#include <dt-bindings/zmk/outputs.h>

#define COMBO_TERM_FAST 35
#define COMBO_TERM_SLOW 50
#define COMBO_PRIOR_IDLE_FAST 10
#define COMBO_PRIOR_IDLE_SLOW 100

